[colors]
background = #55000000
background-alt = #888
foreground = #dfdfdf
foreground-alt = #aaa
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/bbar_base]
width = 100%
height = 25
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 5
padding-right = 2
padding-top = 20

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;2
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0

font-2 = Font Awesome 6 Brands:style=Regular:pixelsize=10;1
font-3 = Font Awesome 6 Pro:style=Solid:pixelsize=10;1
font-4 = Font Awesome 5 Free:style=Regular:pixelsize=10;1
font-5 = Font Awesome 5 Free:style=Solid:pixelsize=10;1

font-6 = siji:pixelsize=10;1

modules-center = date
modules-right = eth pulseaudio spotify xkeyboard memory cpu temperature powermenu

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = default

scroll-down = ~/.config/polybar/awesomewm/switch.sh next
scroll-up = ~/.config/polybar/awesomewm/switch.sh prev


[bar/bbar1]
