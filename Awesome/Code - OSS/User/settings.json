{
	"workbench.startupEditor": "newUntitledFile",
    "editor.wordWrap": "on",
    "security.workspace.trust.untrustedFiles": "open",
    "window.restoreWindows": "none",
    "editor.fontFamily": "'Source Code Pro Medium', 'Droid Sans Mono'",
    "editor.minimap.enabled": false,
    "editor.glyphMargin": false,
    "editor.lineDecorationsWidth": 20,  //undoc and worked!
    "workbench.colorCustomizations": {
        "editor.background": "#0f192a",
		"editor.selectionBackground": "#003b70",
		"editor.selectionHighlightBackground": "#0b343a",
        "editorGutter.background": "#000d1a",
		"editorIndentGuide.background": "#213b53",
        "editorLineNumber.foreground": "#0065bf",
        "editorLineNumber.activeForeground": "#70a5ff",
        "editor.lineHighlightBackground": "#1a2d4c",
        "editorWhitespace.foreground": "#3f495a",
		"list.activeSelectionBackground": "#333e52",
		"list.activeSelectionForeground": "#e3f0ff",

        // statusBar
		"statusBar.background": "#2f3f5a",
		"statusBar.border": "#121824",
		"statusBar.debuggingBackground": "#121824",
		"statusBar.debuggingBorder": "#FF9713",
		"statusBar.debuggingForeground": "#FF9713",
		"statusBar.foreground": "#E3F0FF",
		"statusBar.noFolderBackground": "#121824",
		"statusBar.noFolderBorder": "#121824",
		"statusBar.noFolderForeground": "#E3F0FF",
		"statusBarItem.activeBackground": "#98a2ad",
		"statusBarItem.hoverBackground": "#8c95a0",
		"statusBarItem.prominentBackground": "#1D283B",
		"statusBarItem.prominentHoverBackground": "#121824",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#0088ff",
        "keywords": "#ff9d00",
        "functions": "#cccccc",
        "strings": "#64e335",
        "textMateRules": [
            {"scope":["constant"],
            "settings": {"foreground": "#ff3366"}},
            {"scope":["string.quoted.double.json.comments"],
             "settings": {"foreground": "#64e335"}},
            {"scope":["punctuation.definition.string.begin", "punctuation.definition.string.end"],
             "settings": {"foreground": "#64e335"}},
            {"scope":["meta"],
             "settings": {"foreground": "#cccccc"}},
            {"scope":["variable"],
             "settings": {"foreground": "#80ffbb"}},
            {"scope":["punctuation.definition.variable.shell"],
             "settings": {"foreground": "#80ffbb"}}
        ]
    },
    "files.hotExit": "off",
    "editor.fontSize": 18,
    "workbench.editor.pinnedTabSizing": "compact",
    // "breadcrumbs.enabled": false,
	"breadcrumbs.filePath": "off",
    "breadcrumbs.enabled": false,
    "workbench.editor.decorations.badges":false,
    "workbench.editor.decorations.colors": false,
    "editor.renderWhitespace": "all",
    "editor.comments.insertSpace": false,
    "editor.accessibilitySupport": "off",
	"update.mode": "none",
	"git.ignoreLegacyWarning": true,
	"files.exclude": {
		".deps": true,
		".libs": true,
		"*.lo": true,
		"*.o": true
	},
	"files.associations": {
		"*.acc": "c"
	},
	"AlwaysOpenWorkspace.rootFolders": [
		".",
		"./"
    ],
	"extensions.ignoreRecommendations": true,
	"workbench.editorAssociations": {
		"*.sqlite": "default"
    },
    "window.zoomLevel": -1,
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": false,
    "workbench.activityBar.location": "hidden",
    "workbench.editor.empty.hint": "hidden",
    "git.openRepositoryInParentFolders": "never",
    "window.customTitleBarVisibility": "windowed",
    "zenMode.showTabs": "none",
    "window.commandCenter": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "search.quickOpen.includeHistory": false,
    "workbench.colorTheme": "Deeold",
    "files.autoSave": "afterDelay"
}
